<% include ../partials/header.ejs %>

    <div class="container">
        <h1>Users</h1>
        <div class="panel panel-default">
            
            <% if (users.length > 0) { %>
            <div class="panel-body table-responsive rounded">
            <!--Users Table-->
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Date Created</th>
                            <th>Date Updated</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (var i = 0; i < users.length; i++) { %>
                        <tr>
                            <!--User-->
                            <td><%= users[i].displayName %></td>

                            <!--Emai-->
                            <td><%= users[i].email %></td>

                            <!--Date Created-->
                            <td><%  var date = new Date(users[i].created);
                                    var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                                <%= dateString %></td>

                            <!--Date Updated-->
                            <td><%  date = new Date(users[i].updated);
                                    var dateString = date.toDateString() + " " + date.toLocaleTimeString(); %>
                                <%= dateString %></td>
                            <!--Edit-->
                            <td><a href="/users/<%= users[i]._id %>" title="Edit" class="btn btn-primary">
                                    <i class="far fa-edit"></i></a></td>
                            <!--Delete-->
                            <td><a href="/users/delete/<%= users[i]._id %>" title="Delete" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this?');" >
                                    <i class="far fa-trash-alt"></i></a></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div> <!-- End of panel-body -->
            <% } %>

        </div><!-- End of panel panel-default -->
    </div> <!--End of conatainer -->

<% include ../partials/footer.ejs %>
