<% include ../partials/header.ejs %>
    
     <main class="container">

      <h1>Resiter a New User</h1>
      
    <div class="container-fluid">
        <form method="post" class="form-horizontal" role="form">
          <div class="form-group">
           <!--Display Name -->
                <label class="control-label col-sm-2">Display Name:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="displayname" placeholder="Enter display name" required />
                </div>
            </div>
           <!--Email -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="email" placeholder="Enter email" required autofocus>
                </div>
            </div>
            <!--Password -->
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" required />
                </div>
            </div>
            <!--Submit -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
    </main>
    
<% include ../partials/footer.ejs %>